    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const width = window.innerWidth;
            if (width<1200) {
                if (!document.cookie.includes('screen_width') ||
                !document.cookie.includes('screen_width=' + width)) {
                    document.cookie = "screen_width=" + width + "; path=/";
                    location.reload();
                }
            }
        });
    </script>

