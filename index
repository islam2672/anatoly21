	</script><script type="text/javascript" id="ct_code_block_js_1450">jQuery.expr[":"].CIcontains = jQuery.expr.createPseudo(function(arg) {
    return function(elem) {
        return jQuery(elem).text().toUpperCase().indexOf(arg.toUpperCase()) >= 0;
    };
});

jQuery('#filter-form').submit(function(event) {
    event.preventDefault();
    var curr_text = jQuery('#filter').val();
    filterResults(curr_text);
});

jQuery('#filter').on('input', function() {
    var curr_text = jQuery(this).val();
    if (curr_text === '') {
        jQuery('.grid-item').show();
		jQuery('.no-results').hide();
	}
});


function filterResults(curr_text) {
    var $matchingItems = jQuery('.grid-item:CIcontains("' + curr_text + '")');
    jQuery('.grid-item').hide();
    if ($matchingItems.length > 0) {
        $matchingItems.show();
        jQuery('.no-results').hide();
    } else {
        jQuery('.no-results').show();
    }
}
</script>
