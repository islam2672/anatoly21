<script type="text/javascript" id="ct_code_block_js_100298">jQuery(document).ready(function($) {
  $('.training-hero-imgvid').on('click', function() {
    $(this).hide();
    var videoPlayer = $(this).next('.show-videoplayer');
    videoPlayer.show();
    var iframe = videoPlayer.find('iframe');
    var url = new URL(iframe.attr('src'));
    url.searchParams.set('autoplay', '1');
    iframe.attr('src', url.toString());
  });
});

jQuery(document).ready(function($) {
  // Smooth scroll to target element on click
  $('a[href^="#"]').on('click', function(event) {
    event.preventDefault();
    var target = $(this.getAttribute('href'));
    if (target.length) {
      var offset = 50; // Adjust the offset as desired (in pixels)
      var targetPosition = target.offset().top - offset;
      $('html, body').stop().animate({
        scrollTop: targetPosition
      }, 800); // Adjust the scroll speed as desired
    }
  });
});</script>
